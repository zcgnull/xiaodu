                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_170"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/ln_doctor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_15"
                        android:background="@mipmap/new_poratal_doctor_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="家庭医生"
                            android:layout_margin="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_36"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/portal_doctor_img" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ln_use_medical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_15"
                        android:background="@mipmap/new_portal_consultant_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="线上医生"
                            android:layout_margin="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_36"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/portal_consultant_img" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/ln_device"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_15"
                        android:background="@mipmap/new_portal_device_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="健康数据"
                            android:layout_margin="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_36"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/portal_device_img" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_170"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/ln_wellness"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_15"
                        android:background="@mipmap/new_portal_service_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务中心"
                            android:layout_margin="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_36"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/portal_service_img" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ln_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_15"
                        android:background="@mipmap/new_portal_order_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="养老服务"
                            android:layout_margin="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_36"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/portal_order_img" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ln_video"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_15"
                        android:background="@mipmap/new_portal_chat_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_10"
                            android:text="亲朋好友"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_36"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/portal_chat_img" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bottom"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@mipmap/portal_duer" />

            <com.sunfusheng.marqueeview.MarqueeView
                android:id="@+id/marqueeView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/yy_bg"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:mvAnimDuration="1000"
                app:mvDirection="bottom_to_top"
                app:mvInterval="5000"
                app:mvSingleLine="true"
                app:mvTextColor="@color/black"
                app:mvTextSize="24sp" />
        </LinearLayout>


    </RelativeLayout>

