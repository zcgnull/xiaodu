<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rv_item"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:background="@drawable/back_bg"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_doctor"
            android:layout_width="@dimen/dp_130"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher_round"
            android:layout_height="@dimen/dp_150"/>

        <LinearLayout
            android:layout_toRightOf="@id/iv_doctor"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:text="医生姓名"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_ks"
                android:layout_width="wrap_content"
                android:text="科室"
                android:ellipsize="end"
                android:textSize="20sp"
                android:layout_marginTop="3dp"
                android:textColor="#333"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_zc"
                android:layout_width="wrap_content"
                android:text="职称"
                android:textSize="20sp"
                android:textColor="#333"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_yy"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:background="@drawable/btn_bg_green"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:src="@mipmap/yy"
                        android:layout_height="@dimen/dp_30"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="语音咨询"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textSize="@dimen/sp_19"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_sp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:background="@drawable/btn_bg"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:src="@mipmap/sp"
                        android:layout_height="@dimen/dp_30"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="视频咨询"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textSize="@dimen/sp_19"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



        <TextView
            android:id="@+id/tv_company"
            android:layout_below="@+id/iv_doctor"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="秦皇岛市荣邦保洁服务有限公司"
            android:textSize="22sp"
            android:textColor="#333"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="wrap_content"
        android:text="1"
        android:textColor="#fff"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/bule_point"
        android:layout_height="wrap_content"/>

</RelativeLayout>